                $output.='   </li>';
            }
            if (!empty($contact->field_phone_number)) {
                $output.='   <li>';
                $output.='      <div class="before-phone"></div>';
                $output.='      <div class="list-details_text">';
                $output.='         <p>'.$contact->field_phone_number['und'][0]['value'].'</p>';
