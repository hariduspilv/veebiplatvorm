function hitsa_locations_add_custom_fields() {
  foreach (_hitsa_locations_installed_fields() as $field) {
        field_create_field($field);
  }
  foreach (_hitsa_locations_installed_instances() as $field_instance) {
      $field_instance['entity_type'] = 'node';
      print_r($field_instance);
      field_create_instance($field_instance);
  }
}

function hitsa_locations_delete_custom_fields() {
    foreach (array_keys(_hitsa_locations_installed_fields()) as $field) {
        field_delete_field($field);
    }
    $instances = field_info_instances('node', 'contact_location');
    foreach ($instances as $instance_name => $field_instance) {
        field_delete_instance($field_instance);
    }
}