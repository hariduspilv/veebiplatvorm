<?php

/*
* Implements hook_install.
*/
function hitsa_locations_install() {
  node_types_rebuild();
  $types = node_type_get_types();
  
  // Adds fields to location content type
  hitsa_locations_add_custom_fields();
}

/*
* Implements hook_uninstall.
*/
function hitsa_locations_uninstall() {
  $contact_types = array('contact_location');
  foreach($contact_types as $c) {
    $sql = 'SELECT nid FROM {node} n WHERE n.type = :type';
    $result = db_query($sql, array(':type' => $c));
    $node_ids = array();
    foreach ($result as $row) {
      $node_ids[] = $row->nid;
    }
    node_delete_multiple($node_ids); // Delete all contact nodes
    node_type_delete($c); // Delete contact content type
  }
  hitsa_locations_delete_custom_fields();
  field_purge_batch(500);
}

